<?xml version="1.0" standalone="yes"?>
<!-- build configuration -->
<project name="thane" default="dist" basedir=".">

  <!-- import overriding properties -->
  <property file="build.properties"/>

  <!-- configuration parameters -->
  <property name="lib.name"     value="thane"/>
  <property name="deploy.dir"   value="dist"/>
  <property name="savedoc.dir"  value="docs"/>
  <property name="javadoc.home" value="${deploy.dir}/docs"/>
  <property name="classes.dir"  value="${deploy.dir}/classes"/>
  <property name="libs.dir"     value="extlibs/java"/>
  <import file="etc/libs-incl.xml"/>

  <property name="tamarin.dir"  value="${basedir}/tamarin-central"/>
  <property name="tamdist.dir"  value="${tamarin.dir}/dist"/>
  <property name="thane.dir"  value="${tamarin.dir}/thane"/>

  <!-- import useful tasks -->
  <import file="build/etc/build-support.xml"/>

  <!-- declare our classpath business -->
  <path id="classpath">
    <fileset dir="${deploy.dir}/lib" includes="**/*.jar"/>
  </path>

  <!-- declare the files that will be deployed to the maven repositoy -->
  <filelist dir="." id="deploy.filelist">
    <file name="${deploy.dir}/thane.abc"/>
    <file name="${deploy.dir}/tamarin-builtin.abc"/>
  </filelist>

  <!-- prepares the application directories -->
  <target name="prepare">
    <mkdir dir="${deploy.dir}"/>
    <mkdir dir="${deploy.dir}/lib"/>
    <mkdir dir="${tamdist.dir}"/>
    <copy todir="${deploy.dir}/lib" flatten="true">
      <fileset refid="${lib.name}.libs"/>
    </copy>
  </target>

  <!-- builds our distribution files (war and jar) -->
  <target name="dist" depends="prepare,thanelib,tamarin">
  </target>

  <!-- checks whether our Flash library needs building -->
  <target name="checkthanelib">
    <condition property="no_build_thanelib">
      <uptodate targetfile="${deploy.dir}/${lib.name}.abc">
        <srcfiles dir="${thane.dir}" includes="**/*.as"/>
        <srcfiles dir="${tamarin.dir}/core" includes="*.abc"/>
      </uptodate>
    </condition>
  </target>

  <!-- builds the Thane library -->
  <target name="thanelib" unless="no_build_thanelib" depends="checkthanelib">
    <taskdef name="asclib" classname="flex.ant.AscLibTask" classpathref="classpath"/>
    <asclib as3="true" strict="true" classpathref="classpath"
            outdir="${tamarin.dir}/thane" out="thane">
      <import dir="${tamarin.dir}">
        <include name="core/builtin.abc"/>
      </import>
      <filespec dir="${tamarin.dir}">
        <include name="thane/**/*.as"/>
        <include name="extensions/Dictionary.as"/>
      </filespec>
    </asclib>
    <copy tofile="${deploy.dir}/thane.abc" file="${thane.dir}/${lib.name}.abc"/>
  </target>

  <!-- builds the HTTP library -->
  <target name="httplib" unless="no_build_httplib" depends="thanelib">
    <taskdef name="asclib" classname="flex.ant.AscLibTask" classpathref="classpath"/>
    <asclib as3="true" strict="true" classpathref="classpath"
            outdir="${deploy.dir}" out="http">
      <import dir="${deploy.dir}">
        <include name="tamarin-builtin.abc"/>
        <include name="thane.abc"/>
      </import>
      <filespec dir="http/src">
        <include name="**/*.as"/>
      </filespec>
    </asclib>
  </target>

  <!-- build Tamarin -->
  <condition property="isunix"><os family="unix"/></condition>
  <target name="tamarin" depends="prepare,thanelib" if="isunix">
    <echo level="info" message="Doing native compilation on ${os.name}..."/>
    <exec dir="${tamdist.dir}" executable="python">
       <arg line="${tamarin.dir}/configure.py --enable-shell --enable-debugger --enable-debug"/>
    </exec>
    <exec dir="${tamdist.dir}" executable="make">
       <arg line="-j4"/>
    </exec>
    <!-- TODO: we should actually build builtin.abc -->
    <copy tofile="${deploy.dir}/tamarin-builtin.abc" file="${tamarin.dir}/core/builtin.abc"/>
  </target>

  <!-- tests the HTTP library -->
  <target name="http-test" unless="no_build_httplib" depends="tamarin,httplib">
    <taskdef name="asc" classname="flex.ant.AscTask" classpathref="classpath"/>
    <asc as3="true" strict="true" classpathref="classpath">
      <import dir="${deploy.dir}">
        <include name="tamarin-builtin.abc"/>
        <include name="thane.abc"/>
        <include name="http.abc"/>
      </import>
      <filespec dir="http/test" includes="GameTest.as"/>
    </asc>
    <exec executable="${tamdist.dir}/thane/avmthane">
      <arg line="${deploy.dir}/http.abc http/test/GameTest.abc -- http://www.alyx.com/zell/gameserver.abc"/>
    </exec>
  </target>

  <!-- deploys our built libraries to maven -->
  <target name="deploy" depends="dist">
    <antcall target="maven-deploy"/>
  </target>

</project>
